<Window x:Class="Dentistry.Views.Registration.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views.Registration"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <Grid Visibility="{Binding Visible}" Margin="0,0,0,346" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"/>
                <ColumnDefinition Width="653*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="123*"></RowDefinition>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="253*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Please, choose the type of user!" Style="{DynamicResource All}" FontSize="16" FontWeight="Bold" Grid.RowSpan="2" Grid.Column="1" Margin="154,0,0,0"></Label>
            <ComboBox Grid.Row="1"  Grid.Column="1" Grid.RowSpan="2"  SelectedValue="{Binding Path= SelectedItem}" Margin="154,0,287,23">
                <ComboBoxItem Content="Patient"/>
                <ComboBoxItem Content="Doctor"/>
            </ComboBox>
            <Button Grid.Row="2"  Content="Next" Grid.Column="1" Command="{Binding ShowPage}" Margin="376,26,215,0" >

            </Button>
        </Grid>
        <Frame

            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden" Margin="0,73,0,0" />
    </Grid>
</Window>
