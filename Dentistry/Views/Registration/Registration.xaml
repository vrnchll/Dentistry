<Window x:Class="Dentistry.Views.Registration.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views.Registration" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Registration" Height="500" Width="612" ResizeMode="NoResize">
    <Grid Background="{DynamicResource PrimaryHueDarkBrush}">
        <Grid Visibility="{Binding Visible}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"/>
                <ColumnDefinition Width="653*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="123*"></RowDefinition>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="253*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label  HorizontalAlignment="Center" Grid.Row="0" Content="Пожалуйста, выберите тип пользователя!" Foreground="{DynamicResource PrimaryHueLightBrush}" FontSize="16" FontWeight="Bold" Grid.RowSpan="3" Margin="0,91,0,0" Grid.ColumnSpan="2" />
            <ComboBox x:Name="TypeUser"  SelectedIndex="0" Foreground="{DynamicResource PrimaryHueMidBrush}" FontSize="16" materialDesign:ComboBoxAssist.ClassicMode="true"  Grid.Column="1" Grid.RowSpan="2" SelectedValue="{Binding SelectedItem}" Margin="31,0,133,239" Height="34" Grid.Row="1" >
                <ComboBoxItem IsSelected="True" x:Name="comboboxPatient"  Content="Пациент" />
                <ComboBoxItem Content="Доктор"/>
            </ComboBox>
            <Button Style="{DynamicResource MaterialDesignFlatDarkBgButton}" Grid.Row="2"  Grid.Column="1" Command="{Binding ShowPage}" Margin="304,25,94,203" Height="Auto"   >
                <materialDesign:PackIcon Kind="PageNext" Foreground="White" FontSize="40" VerticalAlignment="Center" RenderTransformOrigin="-1,0.812" >
                </materialDesign:PackIcon>
            </Button>
        </Grid>
        <Frame x:Name="frame" 
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Automatic" />
    </Grid>
</Window>
