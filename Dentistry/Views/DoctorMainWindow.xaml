<Window x:Class="Dentistry.Views.DoctorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views"
        mc:Ignorable="d"
        Title="DoctorMainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,0,640,0" Orientation="Vertical">
            <Button Height="42" Content="Add reception" Command="{Binding AddNewReception}"/>
            <Button Height="42" Content="Receptions" Command="{Binding ShowReceptions}"/>
            <Button Height="42" Content="Compouns" Command="{Binding ShowCompoun}"/>
            <Button Height="42" Content="Profile" Command="{Binding ShowProfile}"/>
        </StackPanel>
        <Frame Margin="152,0,0,0" 
               Content="{Binding CurrentPage}"
               />
    </Grid>
</Window>
