<Page x:Class="Dentistry.Views.Doctors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views"
        mc:Ignorable="d"
        Title="Doctors" Height="450" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="355*"/>
        </Grid.RowDefinitions>
        <Menu Style="{DynamicResource TheMainMenu}" Margin="0,0,0,22">
            <MenuItem Header="" Height="35" Width="35" Style="{DynamicResource Items}">
                <MenuItem.Background>
                    <ImageBrush ImageSource="back--v1.png"/>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem Header="Добавить нового доктора" Style="{DynamicResource Items}" Command="{Binding Add}"/>
            <MenuItem Header="Редактировать" Style="{DynamicResource Items}"/>
            <MenuItem Header="Удалить" Style="{DynamicResource Items}"/>
        </Menu>
        <DataGrid AutoGenerateColumns="False" x:Name="DoctorsList" Style="{DynamicResource DataGridsStyle}" Margin="0,35,0,0" Grid.RowSpan="3">
            <DataGrid.Columns>
                
                <DataGridTextColumn Header="Имя" Binding="{Binding Path= FirstName}"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Path= MiddleName}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Path= LastName}"/>
                <DataGridTemplateColumn  IsReadOnly="False" x:Name="Birth">
                    <DataGridTemplateColumn.Header>
                        <TextBlock Text="Дата Рождения"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=DateOfBurth, StringFormat='dd MMM yyyy' }"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <DatePicker Name="DatePicker"  SelectedDate="{Binding Path=DateOfBirth}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridComboBoxColumn Header="Пол" SelectedValueBinding="{Binding Gender}"></DataGridComboBoxColumn>
                <DataGridTextColumn Header="Должность" Binding="{Binding Path=Position}"></DataGridTextColumn>
                <DataGridTextColumn Header="Стаж работы" Binding="{Binding Path=Experience}"/>
                <DataGridTextColumn Header="Кабинет" Binding="{Binding Path=Cabinet}"/>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding Path=NumberOfPhone}"/>
                <DataGridTextColumn Header="Услуги" Binding="{Binding Path=Services}"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Path=Login}"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Path=Password}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Path=Email}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
