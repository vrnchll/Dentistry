<Window x:Class="Dentistry.Views.AddNewDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views"
        mc:Ignorable="d"
        Title="AddNewDoctor" Height="700" Width="800">
    <Grid Background="{DynamicResource Back}">
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"  Content="Добавление нового доктора" FontSize="16" Style="{DynamicResource Heading}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Имя" Grid.Row="1" Margin="0,5,526,11" Style="{DynamicResource All}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="266" />
        <TextBox Grid.Row="1" Text="{Binding FirstName}" Margin="146,5,386,3" Style="{DynamicResource Input}"></TextBox>
        <Label Content="Отчество" Grid.Row="2" Margin="0,0,526,10" HorizontalAlignment="Center"  Style="{DynamicResource All}" Width="266"/>
        <TextBox Grid.Row="2" Text="{Binding MiddleName}" Margin="146,5,386,5" Style="{DynamicResource Input}"></TextBox>
        <Label Grid.Row="3" Content="Фамилия" Margin="0,0,531,5" Style="{DynamicResource All}" HorizontalAlignment="Center" Width="261"/>
        <TextBox Grid.Row="3"  Text="{Binding LastName}" Margin="146,1,386,4" Style="{DynamicResource Input}"/>
        <Label Grid.Row="4" Content="Дата Рождения" Margin="0,0,526,0" Style="{DynamicResource All}" HorizontalAlignment="Center" Width="266"></Label>
        <DatePicker Grid.Row="4" Margin="146,1,386,10" SelectedDate="{Binding DateOfBirth}" RenderTransformOrigin="0.508,0.795"/>
        <Label Grid.Row="5" Content="Пол"  Style="{DynamicResource All}" Margin="0,0,526,0" HorizontalAlignment="Center" Width="266"/>
        <StackPanel Orientation="Vertical" Grid.Row="5" Margin="146,0,386,0" RenderTransformOrigin="-0.306,0.462">
            <RadioButton Content="Мужской" Style="{DynamicResource RadioBttn}" IsChecked="{Binding Path=Gender[0], Mode=TwoWay}"></RadioButton>
            <RadioButton Content="Женский" Style="{DynamicResource RadioBttn}" IsChecked="{Binding Path=Gender[1], Mode=TwoWay}"/>
        </StackPanel>
        <Label Grid.Row="5" Content="Должность" Style="{DynamicResource All}" Margin="0,38,530,11" Grid.RowSpan="2">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.246"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.496"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <ComboBox Grid.Row="6" Margin="146,0,386,5" Text="{Binding Position}">
            <ComboBoxItem>Врач стоматолог- терапевт</ComboBoxItem>
            <ComboBoxItem>Врач стоматолог- хирург</ComboBoxItem>
            <ComboBoxItem>Врач стоматолог- ортодонт</ComboBoxItem>
            <ComboBoxItem>Врач стоматолог- хирург</ComboBoxItem>
            <ComboBoxItem>Врач хирург-имплантолог</ComboBoxItem>
            <ComboBoxItem>Врач стоматолог-ортопед</ComboBoxItem>
        </ComboBox>
        <Label Grid.Row="7" Content="Стаж работы" Style="{DynamicResource All}" Margin="0,0,526,0"></Label>
        <TextBox Grid.Row="7" Text="{Binding Experience}" Margin="146,0,386,5" Style="{DynamicResource Input}"/>
        <Label Content="Номер телефона" Grid.Row="8" Style="{DynamicResource All}"  Margin="0,0,526,0"/>
        <TextBox Grid.Row="8" Text="{Binding NumberOfPhone}" Margin="146,0,386,5" Style="{DynamicResource Input}"/>
        <Label Grid.Row="9" Content="Кабинет" Style="{DynamicResource All}" Margin="0,0,526,0"></Label>
        <ComboBox Grid.Row="9" Margin="146,2,386,0" Text="{Binding Cabinet}">
            <ComboBoxItem>100</ComboBoxItem>
            <ComboBoxItem>102</ComboBoxItem>
            <ComboBoxItem>102a</ComboBoxItem>
            <ComboBoxItem>105</ComboBoxItem>
            <ComboBoxItem>107</ComboBoxItem>
            <ComboBoxItem>107a</ComboBoxItem>
            <ComboBoxItem>200</ComboBoxItem>
            <ComboBoxItem>202</ComboBoxItem>
            <ComboBoxItem>203</ComboBoxItem>
            <ComboBoxItem>205</ComboBoxItem>
        </ComboBox>
        <Label Grid.Row="10" Content="Пользователь" Style="{DynamicResource Heading}" HorizontalAlignment="Center"/>
        <Label Content="Имя пользователя" Grid.Row="11" Grid.ColumnSpan="3" Style="{DynamicResource All}"/>
        <Label Content="Пароль" Grid.Row="12" Grid.ColumnSpan="3" Style="{DynamicResource All}" />
        <Label Content="Подтверждение пароля" Grid.Row="13" Grid.ColumnSpan="3" Style="{DynamicResource All}" />
        <Label Content="Email" Grid.Row="14" Grid.ColumnSpan="3" Style="{DynamicResource All}" />
        <TextBox x:Name="Login2" Margin="166,0,386,5" Grid.Row="11" Text="{Binding Login}" Style="{DynamicResource Input}"/>
        <TextBox x:Name="Password2" Grid.Row="12" Text="{Binding Password}" Margin="166,0,386,5" Style="{DynamicResource Input}"/>
        <TextBox x:Name="ConfPass2" Grid.Row="13"  Text="{Binding ConfirmPassword}"  Margin="166,0,386,5" Style="{DynamicResource Input}"/>
        <TextBox x:Name="Email2" Grid.Row="14" Text="{Binding Email}" Margin="166,0,386,5" Style="{DynamicResource Input}"/>
        <Button Content="Add" Command="{Binding RegistrationCommand}" Grid.Row="15" Style="{DynamicResource AddButt}" Background="{DynamicResource Butt}" Margin="341,2,345,3"/>
    </Grid>
</Window>
