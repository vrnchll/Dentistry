<Window x:Class="Dentistry.Views.AddNewCompoun"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views" xmlns:me="clr-namespace:Dentistry.ViewModels.AdminPagesViewModel"
        mc:Ignorable="d"
        Title="AddNewCompoun" Height="350" Width="600">
    <Window.Resources>
        <me:AddNewCompounViewModel x:Key="model"/>
    </Window.Resources>
    <Grid Background="{DynamicResource Back}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Добавление нового талона" Style="{DynamicResource Heading}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Дата приема" Grid.Row="1" Margin="97,7,366,24" Style="{DynamicResource All}"/>
        <DatePicker Grid.Row="1" Margin="226,7,225,26"></DatePicker>
        <Label Grid.Row="2" Content="Фамилия пациента" Margin="97,0,366,31" Style="{DynamicResource All}"/>
        <ComboBox Grid.Row="2" Margin="226,0,225,31" Text="{Binding LastNamePatient}" ItemsSource="{Binding Source={x:Static me:AddNewCompounViewModel.LastNamePatients}, Mode=OneWay}" />
        <Label Grid.Row="3" Content="Услуга" Margin="97,0,366,27" Style="{DynamicResource All}"></Label>
        <ComboBox Grid.Row="3" Margin="226,0,225,27" Text="{Binding Service}" ItemsSource="{Binding Source={x:Static me:AddNewCompounViewModel.Services}, Mode=OneWay}"></ComboBox>
        <Label Grid.Row="4" Content="Врач" Margin="97,0,366,27" Style="{DynamicResource All}"/>
        <ComboBox Grid.Row="4" Margin="226,0,225,27" Text="{Binding LastNameDoctor}" ItemsSource="{Binding Source={x:Static me:AddNewCompounViewModel.LastNameDoctors}, Mode=OneWay}"></ComboBox>
        <Button Content="Добавить" Grid.Row="5" Margin="254,0,250,27" Style="{DynamicResource AddButt}" Background="{DynamicResource Butt}" Command="{Binding Add}"/>
    </Grid>
</Window>
