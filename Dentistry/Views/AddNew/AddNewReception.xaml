<Window x:Class="Dentistry.Views.AddNewReception"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="AddNewReception" Height="450" Width="800">
    <Grid Background="{DynamicResource PrimaryHueLightBrush}" Opacity="0.898">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontFamily="Bodoni MT Black" Foreground="#FF303030" FontSize="20" Content="Добавление нового посещения" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <DatePicker Grid.Row="1" SelectedDate="{Binding DateOfReception}" FontSize="14" Background="{DynamicResource PrimaryHueLightBrush}" materialDesign:HintAssist.Hint=" Дата приема" Height="42" Margin="266,8" />
        <TextBlock Text="Время приема" Grid.Row="2"  Foreground="#FF303030" FontFamily="Bodoni MT Black" Margin="342,0,0,0"/>
        <xctk:DateTimeUpDown Format="ShortTime" Value="{Binding TimeOfBeginReception}" FormatString="hh:mm"  Grid.Row="2" Margin="315,17,412,0" Foreground="{DynamicResource PrimaryHueLightBrush}" FontSize="14" Background="{DynamicResource MaterialDesignDarkBackground}" materialDesign:HintAssist.Hint=" Время начала" Height="42" RenderTransformOrigin="0.692,0.561"></xctk:DateTimeUpDown>
        <xctk:DateTimeUpDown Format="ShortTime" Value="{Binding TimeOfEndReception}" FormatString="hh:mm" Grid.Row="2" Margin="415,17,312,0" Foreground="{DynamicResource PrimaryHueLightBrush}" FontSize="14" Background="{DynamicResource MaterialDesignDarkBackground}" materialDesign:HintAssist.Hint=" Время окончания" Height="42" RenderTransformOrigin="0.6,1.024"/>
        <TextBox Grid.Row="3" Margin="266,10,266,0"  FontSize="14" Background="{DynamicResource PrimaryHueLightBrush}" materialDesign:HintAssist.Hint=" Фамилия пациента" />
        <ListBox ItemsSource="{Binding ListServices}" x:Name="ServiceList" Grid.Row="4" Margin="266,0,266,0"  FontSize="14" Background="{DynamicResource PrimaryHueLightBrush}" materialDesign:HintAssist.Hint=" Услуга" >
            <ListBoxItem>
                <CheckBox  Content="{Binding Name}" Foreground="#000"  />
            </ListBoxItem>
            
            
        
        </ListBox>
        <ComboBox Grid.Row="5" Margin="266,10,266,0" FontSize="14" Background="{DynamicResource PrimaryHueLightBrush}" materialDesign:HintAssist.Hint=" Врач" Height="43"/>
        <TextBox Grid.Row="6" Margin="266,10"  FontSize="14" Background="{DynamicResource PrimaryHueLightBrush}" materialDesign:HintAssist.Hint=" Стоимость"/>
        <Button Content="Добавить" Grid.Row="7" Margin="325,0,325,16" Style="{DynamicResource MaterialDesignRaisedDarkButton}" Background="{DynamicResource MaterialDesignDarkBackground}"/>

    </Grid>
</Window>
