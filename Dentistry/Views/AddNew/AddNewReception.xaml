<Window x:Class="Dentistry.Views.AddNewReception"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views"
        mc:Ignorable="d"
        Title="AddNewReception" Height="450" Width="800">
    <Grid Background="{DynamicResource Back}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Style="{DynamicResource Heading}" FontSize="20" Content="Добавление нового посещения" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Время начала" Grid.Row="1" Style="{DynamicResource All}" Margin="86,5,526,26"/>
        <DatePicker Grid.Row="1" Margin="266,7,266,26"></DatePicker>
        <Label Content="Время окончания" Grid.Row="2" Style="{DynamicResource All}" Margin="86,5,526,26"/>
        <DatePicker Grid.Row="2" Margin="266,7,266,26"></DatePicker>
        <Label Grid.Row="3" Content="Фамилия пациента" Style="{DynamicResource All}" Margin="86,0,526,22"/>
        <TextBox Grid.Row="3" Margin="266,0,266,22" Style="{DynamicResource Input}"/>
        <Label Grid.Row="4" Content="Услуга" Style="{DynamicResource All}" Margin="86,0,526,27"></Label>
        <ComboBox Grid.Row="4" Margin="266,0,266,27"></ComboBox>
        <Label Grid.Row="5" Content="Врач" Style="{DynamicResource All}" Margin="86,0,526,27"/>
        <ComboBox Grid.Row="5" Margin="266,0,266,27"></ComboBox>
        <Label Grid.Row="6" Content="Стоимость" Margin="86,0,526,20" Style="{DynamicResource All}"></Label>
        <TextBox Grid.Row="6" Margin="266,0,266,20" Style="{DynamicResource Input}"/>
        <Button Content="Добавить" Grid.Row="7" Margin="326,0,324,19" Style="{DynamicResource AddButt}" Background="{DynamicResource Butt}"/>

    </Grid>
</Window>
