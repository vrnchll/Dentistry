<Page x:Class="Dentistry.Views.DoctorPages.CompounsForD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dentistry.Views.DoctorPages" xmlns:t="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompounsForD" Height="auto" Width="auto">
    <Grid>
        <DataGrid AutoGenerateColumns="False" HorizontalScrollBarVisibility="Visible" ItemsSource="{Binding Compouns}" x:Name="CompounsList" Background="{DynamicResource PrimaryHueLightBrush}" Foreground="Black" RowHeight="60" RowHeaderStyle="{StaticResource MaterialDesignFloatingActionLightButton}" FontFamily="Tahoma" FontSize="16" Opacity="0.8">
            <DataGrid.Columns>
                <DataGridTemplateColumn  IsReadOnly="True" x:Name="EndDate">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="Дата приема"/>
                </DataGridTemplateColumn.Header>
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path = DateOfReception, StringFormat='dd MMM yyy'}"  />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>


            </DataGridTemplateColumn>
            <DataGridTemplateColumn  IsReadOnly="True" x:Name="TimeOfRec">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="Время"/>
                </DataGridTemplateColumn.Header>

                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path = TimeOfReception}"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" Header="Пациент" Binding="{Binding Path=Patient.LastName}"/>
                
                <DataGridTemplateColumn  IsReadOnly="False" x:Name="Status">
                <DataGridTemplateColumn.Header>
                    <TextBlock Text="Выполнено"/>
                </DataGridTemplateColumn.Header>

                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding Path = Status}" Command="{Binding StatusChange}"  />
                    </DataTemplate>

                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
              
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
