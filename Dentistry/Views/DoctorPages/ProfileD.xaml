<Page x:Class="Dentistry.Views.DoctorPages.ProfileD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     
      xmlns:local="clr-namespace:Dentistry.ViewModels.DoctorPagesViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfileD">

    <Grid Background="{DynamicResource Back}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*" />
            <RowDefinition Height="40*"/>
            <RowDefinition Height="137*"/>


        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Профиль" Style="{DynamicResource Heading}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="164,-1,329,25" Width="103" Grid.Column="1" Height="38" Grid.RowSpan="2"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Имя" Style="{DynamicResource All}"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Отчество" Style="{DynamicResource All}"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Фамилия" Style="{DynamicResource All}"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Дата рождения" Style="{DynamicResource All}"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Пол" Style="{DynamicResource All}"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Номер телефона" Style="{DynamicResource All}"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Должность" Style="{DynamicResource All}"/>
        <Label Grid.Row="8" Grid.Column="0" Content="Стаж работы" Style="{DynamicResource All}"/>
        <Label Grid.Row="9" Grid.Column="0" Content="Кабинет" Style="{DynamicResource All}"/>
        <Label Grid.Row="10" Grid.Column="0" Content="Имя пользователя" Style="{DynamicResource All}"/>

        <Label Grid.Row="1" Grid.Column="1" x:Name="First" Content="{x:Static local:DoctorProfileViewModel.FirstName}" Style="{DynamicResource All}"/>
        <Label Grid.Row="2" Grid.Column="1" x:Name="Middle" Content="{x:Static local:DoctorProfileViewModel.MiddleName}"  Style="{DynamicResource All}"/>
        <Label Grid.Row="3" Grid.Column="1" x:Name="Last" Content="{x:Static local:DoctorProfileViewModel.LastName}" Style="{DynamicResource All}"/>
        <Label Grid.Row="4" Grid.Column="1" x:Name="Date" Content="{x:Static local:DoctorProfileViewModel.DateOfBirthday}" Style="{DynamicResource All}"/>
        <Label Grid.Row="5" Grid.Column="1" x:Name="Gender" Content="{x:Static local:DoctorProfileViewModel.Gender}" Style="{DynamicResource All}"/>
        <Label Grid.Row="6" Grid.Column="1" x:Name="Number" Content="{x:Static local:DoctorProfileViewModel.NumberOfPhone}" Style="{DynamicResource All}"/>
        <Label Grid.Row="7" Grid.Column="1" x:Name="Position" Content="{x:Static local:DoctorProfileViewModel.Position}" Style="{DynamicResource All}"/>
        <Label Grid.Row="8" Grid.Column="1" x:Name="Ex" Content="{x:Static local:DoctorProfileViewModel.Experience}" Style="{DynamicResource All}"/>
        <Label Grid.Row="9" Grid.Column="1" x:Name="Cab" Content="{x:Static local:DoctorProfileViewModel.Cabinet}" Style="{DynamicResource All}"/>
        <Label Grid.Row="10" Grid.Column="1" x:Name="Login" Content="{x:Static local:DoctorProfileViewModel.Login}" Style="{DynamicResource All}"/>

    </Grid>
</Page>
