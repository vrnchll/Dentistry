<Page x:Class="Dentistry.Views.DoctorPages.ProfileD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     
      xmlns:local="clr-namespace:Dentistry.ViewModels.DoctorPagesViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfileD">
   
    <Grid Background="{DynamicResource Back}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*" />
            <RowDefinition Height="40*"/>
            <RowDefinition Height="137*"/>


        </Grid.RowDefinitions>
        
            <Label Grid.Row="0" Content="Profile" Style="{DynamicResource Heading}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="164,-2,344,24" Width="88" Grid.Column="1" Height="38" Grid.RowSpan="2"/>
            <Label Grid.Row="1" Grid.Column="0" Content="First Name" Style="{DynamicResource All}"/>
            <Label Grid.Row="2" Grid.Column="0" Content="Middle Name" Style="{DynamicResource All}"/>
            <Label Grid.Row="3" Grid.Column="0" Content="Last Name" Style="{DynamicResource All}"/>
            <Label Grid.Row="4" Grid.Column="0" Content="Date Of Birthday" Style="{DynamicResource All}"/>
            <Label Grid.Row="5" Grid.Column="0" Content="Gender" Style="{DynamicResource All}"/>
            <Label Grid.Row="6" Grid.Column="0" Content="Number of Phone" Style="{DynamicResource All}"/>
            <Label Grid.Row="7" Grid.Column="0" Content="Position" Style="{DynamicResource All}"/>
            <Label Grid.Row="8" Grid.Column="0" Content="Experience" Style="{DynamicResource All}"/>
            <Label Grid.Row="9" Grid.Column="0" Content="Cabinet" Style="{DynamicResource All}"/>
            <Label Grid.Row="10" Grid.Column="0" Content="Login" Style="{DynamicResource All}"/>

        <Label Grid.Row="1" Grid.Column="1" x:Name="First" Content="{x:Static local:DoctorProfileViewModel.FirstName}" Style="{DynamicResource All}"/>
        <Label Grid.Row="2" Grid.Column="1" x:Name="Middle" Content="Middle Name" Style="{DynamicResource All}"/>
        <Label Grid.Row="3" Grid.Column="1" x:Name="Last" Content="Last Name" Style="{DynamicResource All}"/>
        <Label Grid.Row="4" Grid.Column="1" x:Name="Date" Content="Date Of Birthday" Style="{DynamicResource All}"/>
        <Label Grid.Row="5" Grid.Column="1" x:Name="Gender" Content="Gender" Style="{DynamicResource All}"/>
        <Label Grid.Row="6" Grid.Column="1" x:Name="Number" Content="Number of Phone" Style="{DynamicResource All}"/>
        <Label Grid.Row="7" Grid.Column="1" x:Name="Position" Content="Position" Style="{DynamicResource All}"/>
        <Label Grid.Row="8" Grid.Column="1" x:Name="Ex" Content="Experience" Style="{DynamicResource All}"/>
        <Label Grid.Row="9" Grid.Column="1" x:Name="Cab" Content="Cabinet" Style="{DynamicResource All}"/>
        <Label Grid.Row="10" Grid.Column="1" x:Name="Login" Content="Login" Style="{DynamicResource All}"/>

    </Grid>
</Page>
