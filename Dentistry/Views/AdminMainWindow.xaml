<Window x:Class="Dentistry.Views.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dentistry.Views"
        mc:Ignorable="d"
        Title="AdminMainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,0,640,0" Orientation="Vertical">
            <Button Height="42" Content="Patients" Command="{Binding ShowPatients}"/>
            <Button Height="42" Content="Doctors" Command="{Binding ShowDoctors}"/>
            <Button Height="42" Content="Receptions" Command="{Binding ShowReceptions}"/>
            <Button Height="42" Content="Compouns" Command="{Binding ShowCompouns}"/>
            <Button Height="42" Content="Services" Command="{Binding ShowServices}"/>
        </StackPanel>
        <Frame Margin="152,0,0,0" 
               Content="{Binding CurrentPage}"
               />
    </Grid>
</Window>
