<Page x:Class="Dentistry.Views.PatientPages.DoctorsForP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dentistry.Views.PatientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="DoctorsForP">

    <Grid Background="{DynamicResource Back}">
        <DataGrid Style="{DynamicResource DataGridsStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"/>
                <DataGridTextColumn Header="Fist Name"/>
                <DataGridTextColumn Header="Middle Name"/>
                <DataGridTextColumn Header="Last Name"/>
                <DataGridTemplateColumn  IsReadOnly="False" x:Name="Birth">
                    <DataGridTemplateColumn.Header>
                        <TextBlock Text="Date Of Birthday"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=DateOfBurth, StringFormat='dd MMM yyyy' }"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <DatePicker Name="DatePicker"  SelectedDate="{Binding Path=DateOfRes}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridComboBoxColumn Header="Gender"></DataGridComboBoxColumn>
                <DataGridTextColumn Header="Position"></DataGridTextColumn>
                <DataGridTextColumn Header="Experience"/>
                <DataGridTextColumn Header="Cabinet"/>
                <DataGridTextColumn Header="Number of phone"/>
                <DataGridTextColumn Header="Services"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
